<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:background="@drawable/fondoLogin"
    >

    <LinearLayout
        android:id="@+id/LayoutHorizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primaryColor"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="NOMBRE DEL BANCO"
            android:textColor="#FDFCFC" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutVertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintTop_toBottomOf="@id/LayoutHorizontal"
        tools:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="278dp"
            android:layout_height="60dp"
            android:background="@color/inputColor"
            android:ems="10"
            android:padding="10dp"
            android:hint="Ingrese su mail"
            android:inputType="textEmailAddress"
            android:textColorHint="#FFFFFF"
            android:visibility="visible" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="278dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/inputColor"
            android:ems="10"
            android:hint="Ingrese su contraseÃ±a"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="#FFFFFF" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primaryColor"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/loginText"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintTop_toBottomOf="@id/LayoutVertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>
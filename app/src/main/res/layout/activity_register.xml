<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_back"
            android:layout_width="@dimen/iconMenuSize"
            android:layout_height="@dimen/iconMenuSize"
            android:layout_marginStart="14sp"
            android:background="@drawable/arrowleft"
            android:contentDescription="@string/back_menu" />

        <TextView
            android:id="@+id/bankName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingStart="60dp"
            android:text="@string/bankName"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/border_card_top"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="28sp"
        android:paddingEnd="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        tools:layout_constraintTop_toBottomOf="@id/header">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/textRegister"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:text="Ingrese su mail registrado en el cajero *"
            android:textColor="@color/black"
            tools:textStyle="bold" />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:padding="14sp"
            android:layout_marginTop="8sp"
            android:hint="Ingrese su email"
            android:autofillHints="text"
            android:textColorHint="@color/black"
            android:background="@color/inputColor" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:text="Ingrese clave generada en el cajero *"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/password_account"
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:layout_marginTop="8sp"
            android:padding="14sp"
            android:autofillHints="password"
            android:inputType="textPassword"
            android:hint="Ingrese su clave"
            android:textColorHint="@color/black"
            android:background="@color/inputColor" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:text="Nombre:"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:layout_marginTop="8sp"
            android:autofillHints="text"
            android:background="@color/inputColor"
            android:hint="Ingrese su nombre"
            android:inputType="text"
            android:padding="14sp"
            android:textColorHint="@color/black" />
        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:text="Apellido:"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/surname"
            android:layout_width="match_parent"
            android:layout_height="48sp"
            android:layout_marginTop="8sp"
            android:autofillHints="text"
            android:background="@color/inputColor"
            android:hint="Ingrese su apellido"
            android:inputType="text"
            android:padding="14sp"
            android:textColorHint="@color/black" />


        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:text="Edad:"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="8sp"
            android:autofillHints="number"
            android:inputType="number"
            android:background="@color/inputColor"
            android:ems="10"
            android:padding="14sp"
            android:hint="Ingrese su edad"
            android:textColorHint="@color/black" />
        <Button
            android:id="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28sp"
            android:padding="@dimen/paddingIcons"
            android:background="@drawable/border_card_total"
            android:gravity="center"
            android:text="Registrarse"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
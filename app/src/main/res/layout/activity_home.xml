<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoColor"
    >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/primaryColor"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/menuHamburguesa"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:background="@drawable/menu"
            android:contentDescription="Menu" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"></Space>

        <Button
            android:id="@+id/notification"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/notification"
            android:contentDescription="Notificaciones"
            android:gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/infoUser"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/border_card"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0"
            android:text="Bienvenido, "
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="0"
            android:text="Saldo disponible"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="$ 1.111,11"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoUser">

        <Button
            android:id="@+id/sendButton"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_weight="0"
            android:background="@drawable/enviar"
            android:contentDescription="Enviar"
            />

        <TextView
            android:id="@+id/sendButtonText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Enviar"
            />

        <Button
            android:id="@+id/creditCard"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_weight="0"
            android:background="@drawable/creditcard_button"
            android:contentDescription="Credit Card"
            />

        <TextView
            android:id="@+id/creditCardText"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:text="Tarjeta de credito"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp"></LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>